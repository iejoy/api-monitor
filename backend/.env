# 应用配置
APP_NAME=业务应用监控平台
VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# MySQL数据库配置
DATABASE_URL=mysql://monitor:monitor123@192.168.3.19:3306/business_monitor
# 数据库连接池配置
DB_POOL_SIZE=30
DB_MAX_OVERFLOW=70
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# 如果需要使用SQLite（开发环境），可以使用：
# DATABASE_URL=sqlite:///./monitor.db
# 如果使用PostgreSQL，格式如下：
# DATABASE_URL=postgresql://username:password@localhost:5432/monitor_db

# 安全配置
SECRET_KEY=your-secret-key-change-in-production-environment
ACCESS_TOKEN_EXPIRE_MINUTES=30

# 邮件配置
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_USER=your-email@qq.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=your-email@qq.com

# 飞书配置
FEISHU_WEBHOOK_URL=https://open.feishu.cn/open-apis/bot/v2/hook/your-webhook-key

# 微信配置
WECHAT_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your-webhook-key

# 监控配置
DEFAULT_TIMEOUT=30
DEFAULT_INTERVAL=300
MAX_RETRY_COUNT=3

# 邮件代理配置
# 是否启用邮件代理
EMAIL_USE_PROXY = True

# 代理服务器地址
EMAIL_PROXY_HOST = proxy.c.local

# 代理服务器端口
EMAIL_PROXY_PORT = 80

# 代理类型 (SOCKS5, SOCKS4, HTTP)
EMAIL_PROXY_TYPE = "HTTP"

# 代理用户名（可选）
EMAIL_PROXY_USERNAME = ""

# 代理密码（可选）
EMAIL_PROXY_PASSWORD = ""